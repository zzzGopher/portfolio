    ViewData["Title"] = "Home page";
}

<section front-page-section>
<div class="d-inline-flex flex-column text-black text-center position-absolute copy_text user-select-none"><span>C</span>O<span>P</span>Y<span>W</span>R<span>I</span>I<span>G</span>H<span>T</span><span style="color:red;">&#169;</span><span>M</span><span>E</span></div>

<div class="container mt-5 text-center text-md-start text-black">
    <div class="row position-relative px-md-0">
        <div class="col heading_font_col">
            <h1 class="display-1 m-0 p-0 lh-1">Frontend and <br/> Backend</h1>
        </div>
        <div class="col-12">
            <span class="bottom_text fs-4 fw-bolder ">Developer</span>
            </div>
    </div>
    <div class="row mt-5 d-flex justify-content-center gap-2 col-md-6">
        <strong class="px-md-3">About</strong>
        <p id="front_page_p" class="px-4 px-md-3 text-black">
            Hi, I’m a frontend and backend applications developer. I’m self taught and have experience on a broad topology of IT topics. I enjoy both frontend and backend development. Technologies I’m familiar with are <span>React</span>, <span>ASP.net Core</span>, <span>Figma</span>, <span>TailwindCSS</span>, <span>BootStrap</span>, <span>SCSS</span>, <span>HTML5</span>, <span>Typescript</span>, <span>Svelte</span>, and <span>Microsoft SQL Server</span>.
        </p>
    </div>

    <!--svg section-->

        <partial name="./Partials/_Social-Icons.cshtml" />

    <!--svg section-->


    <div class="location_wrapper row align-items-center flex-column mt-5 mt-md-3 justify-content-center align-content-md-start bg-black text-white justify-content-md-start p-0 mx-md-0 text-md-start">
        <div class="text-nowrap w-auto location_text">
            Location, Broken Arrow
        </div>
        <span class="ok-span p-0 fw-bolder  bg-black w-auto">
            Oklahoma
        </span>
    </div>

    <div class="container d-flex flex-column align-items-center">
        
        <img src="./Assets/vertical-rule.svg" width="3" class="my-3"/>
        <div class="svg_holder">
            <svg width="85" height="85" viewBox="0 0 85 85" fill="none" xmlns="http://www.w3.org/2000/svg">
                <g id="arrow_svg">
                    <rect id="rectangle_2" x="0.891724" y="42.4458" width="58.9172" height="58.9172" transform="rotate(-45 0.891724 42.4458)" fill="#54595E" />
                    <path id="Vector" d="M36.9163 27.7166H48.1888V42.5946H57.2819L42.5526 57.1752L27.8232 42.5946H36.9163V27.7166Z" fill="white" />
                </g>
                </svg>
            </div>
    </div>
</div>
</section>

<section middle-section>
    <div class="container">
        <h2 class="w-auto mt-4 fw-bolder text-uppercase text-center fs-1">
            Work
        </h2>
        

    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="1" data-slide-to="0" class="active"></li>
            <li data-target="2" data-slide-to="1"></li>
            <li data-target="3" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="./Assets/erik-mclean-GjCx5KhulZI-unsplash.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="./Assets/jilbert-ebrahimi-b0p818k8Ok8-unsplash.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="./Assets/evgeny-karchevsky-k1tUxfs8JYY-unsplash.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev"    href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<style>
    .svg_holder:hover svg rect {
        fill:red;
        transition:ease-in-out .8s;
    }
</style>



